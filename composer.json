{
  "name": "allenjb/mailer",
  "type": "library",
  "description": "Email library that separates emails from email transport",
  "keywords": [
    "AllenJB",
    "email",
    "PHPMailer"
  ],
  "homepage": "https://github.com/AllenJB/Mailer",
  "license": "MIT",
  "authors": [
    {
      "name": "AllenJB",
      "email": "php-packages@allenjb.me.uk",
      "homepage": "https://github.com/AllenJB",
      "role": "Developer"
    }
  ],
  "require": {
    "php" : "^7.1|^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpmailer/phpmailer": "^6.5"
  },
  "suggest": {
    "phpmailer/phpmailer": "Recommended transport"
  },
  "autoload": {
    "psr-4": {
      "AllenJB\\Mailer\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AllenJB\\Mailer\\Tests\\": "tests"
    }
  }
}
